.hide {
  display: none;
}
.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  display: block;
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.product-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
}
.product-price{
  background-color: white;
  padding: 30rpx 50rpx;
  color: red;
}

.product-container {
  margin-top: 5rpx;
  width: 100%;
  background-color: white;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-bottom: 0rpx;
}

.product-content {
  display: flex;
  flex-direction: column;
}

.product-text {
  width: 650rpx;
  margin: 20rpx 0;
  white-space: pre-wrap;
}
.product-image {
  width: 650rpx;
  margin-bottom: 20rpx;
}
.float-bar {
  color: white;
}

.product-video {
  height: 500rpx;
  width: 650rpx;
  margin-bottom: 20rpx;
}

.product-video video {
  width: 100%;
  height: 500rpx;
}

.user-info {
  position: absolute;
  top: 15%;
  left: 0;
  width: 100%;
  height: 70%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: f0f0f0;
  opacity: 1;
  z-index: 1000;
}
.input-box {
  margin: 30rpx 0;
  width: 690rpx;
  border-style:solid;
  border-width: 1rpx;
  border-color: #F56C6C;
  border-radius: 10rpx;
}
.input {
  height: 80rpx;
  color: gray;
  padding-left: 10rpx;
  font-style: italic;
}

.user-info-container {
  overflow-x: hidden;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  position: fixed;
  background-color: #f0f0f0;
  z-index: 999;
}

.confirm-box {
  margin: 30rpx 0;
  width: 690rpx;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.confirm {
  width: 250rpx;
  height: 100rpx;
  border-style:solid;
  border-width: 1rpx;
  border-color: #F56C6C;
  border-radius: 10rpx;
  color: #F56C6C;
  text-align: center;
  line-height: 100rpx;
}
.cancel {
  width: 250rpx;
  height: 100rpx;
  border-style:solid;
  border-width: 1rpx;
  border-color: #F56C6C;
  border-radius: 10rpx;
  text-align: center;
  line-height: 100rpx;
}

.navigator-hover {
  opacity: 0.3;
}