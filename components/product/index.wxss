.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  display: block;
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.product-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
}
.product-price{
  background-color: white;
  padding: 30rpx 50rpx;
  color: red;
}

.product-container {
  margin-top: 5rpx;
  width: 100%;
  background-color: white;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-bottom: 0rpx;
}

.product-content {
  display: flex;
  flex-direction: column;
}

.product-text {
  width: 650rpx;
  margin: 20rpx 0;
  white-space: pre-wrap;
}
.product-image {
  width: 650rpx;
  margin-bottom: 20rpx;
}
.product-document {
  width: 650rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
  position: relative;
}
.document-image {
  width: 180rpx;
  height: 180rpx;
  box-sizing: border-box;
}
.document-locker {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: 10rpx;
  left: 50%;
  transform: translateX(70rpx);
  z-index: 100;
}

.float-bar {
  color: white;
}

.product-video {
  height: 500rpx;
  width: 650rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.product-video video {
  width: 100%;
  height: 500rpx;
}
.video-mask {
  position: absolute;
  width: 120rpx;
  height: 150rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: black;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.mask-button {
  display: block;
  width: 70rpx;
  height: 70rpx;
}
.video-locker {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -15rpx;
  left: 50%;
  transform: translateX(310rpx);
}
.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 101;
  background-color: black;
  opacity: 0.3;
}

.user-info-container {
  position: fixed;
  height: 750rpx;
  width: 100%;
  bottom: -1000rpx;
  left: 0;
  z-index: 102;
  background-color: #F6F6F6;
  padding: 80rpx 50rpx;
  box-sizing: border-box;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.user-info-container-show {
  transform: translateY(-1000rpx);
  transition: .3s;
}
.input-box {
  margin: 30rpx 0;
  border-style:solid;
  border-width: 5rpx;
  border-color: grey;
  box-sizing: border-box;
  border-radius: 5rpx;
}
.input {
  height: 100rpx;
  color: gray;
  padding-left: 10rpx;
}

.confirm-box {
  margin: 30rpx 0;
  display: flex;
  justify-content: space-between;
  align-items: center
}

.confirm {
  width: 250rpx;
  height: 100rpx;
  border-style:solid;
  border-width: 5rpx;
  border-color: grey;
  text-align: center;
  line-height: 100rpx;
  border-radius: 5rpx;
  color: #72D332;
}
.cancel {
  width: 250rpx;
  height: 100rpx;
  border-style:solid;
  border-width: 5rpx;
  border-color: grey;
  text-align: center;
  line-height: 100rpx;
  border-radius: 5rpx;
  color: #F56C6C;
}

.navigator-hover {
  opacity: 0.3;
}