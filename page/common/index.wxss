.navigator-box {
  position: relative;
  background-color: #FFFFFF;
  font-size: 32rpx;
}

.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1rpx;
  border-top: 1rpx solid #F8F8F8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: block;
  height: 15rpx;
  width: 15rpx;
  border-width: 3rpx 3rpx 0 0;
  border-color: gray;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 10rpx;
}

.navigator-img-front{
  width: 60rpx;
  height: 60rpx;
  margin-right: 30rpx;
}

.button {
  margin-top: 100rpx;
  width: 80%;
  height: 100rpx;
  background-image: linear-gradient(to bottom, #fedf58 , #f9c607);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.empty-page {
  color: gray;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-style: italic;
  font-family: 'Times New Roman', Times, serif;
  height: 100%;
}

.product-item {
  background-color: white;
  padding: 10rpx 20rpx 10rpx;
  border-bottom-color: #f0f0f0;
  border-bottom-width: .1rpx;
  border-bottom-style: solid;
}
