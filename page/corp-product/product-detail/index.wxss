@import "../../common/index.wxss";
.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  display: block;
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.product-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
}
.product-price{
  background-color: white;
  padding: 30rpx 50rpx;
  color: red;
}

.product-container {
  margin-top: 5rpx;
  width: 100%;
  background-color: white;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-bottom: 0rpx;
}
.product-content-title {
  background-color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-weight: bold;
}
.product-content {
  display: flex;
  flex-direction: column;
}

.product-text {
  width: 650rpx;
  margin: 20rpx 0;
  white-space: pre-wrap;
}
.product-image {
  width: 650rpx;
  margin-bottom: 20rpx;
}
.float-bar {
  color: white;
}

.product-video {
  height: 500rpx;
  width: 650rpx;
  margin-bottom: 20rpx;
}

.product-video video {
  width: 100%;
  height: 500rpx;
}

.customer-info {
  background-color: white;
  margin-bottom: 100rpx;
  padding: 50rpx;
}
.input-box {
  display: flex;
  margin: 30rpx 0 30rpx;
  border-style:solid;
  border-width: 1rpx;
  border-color: #F56C6C;
  border-radius: 10rpx;
}
.input {
  height: 80rpx;
  color: gray;
  padding-left: 10rpx;
  font-style: italic;
}

.buy-button {
  background-color: #F56C6C;
  color: white;
  position: fixed;
  width: 100%;
  height: 100rpx;
  top: 100%;
  left: 0;
  z-index: 1;
  transform: translateY(-100%);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}