.buy-button {
  background-color: #F56C6C;
  color: white;
  position: fixed;
  width: 100%;
  height: 100rpx;
  top: 100%;
  left: 0;
  z-index: 1;
  transform: translateY(-100%);
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.logo {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  top: 10rpx;
  right: 10rpx;
  border-radius: 50%;
  box-sizing: border-box;
}