
.cover {
  width: 100%;
  background-color: white;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.cover image {
  display: block;
  width: 100%;
  max-height: 500rpx;
}
.cover view {
  padding: 30rpx 50rpx;
  font-weight: bold;
}
.requirement-brief{
  background-color: white;
  color: gray;
  padding: 30rpx 50rpx;
  white-space: pre-wrap;
}

.requirement-container {
  margin-top: 5rpx;
  width: 100%;
  background-color: white;
  padding-left: 50rpx;
  padding-right: 50rpx;
  margin-bottom: 0rpx;
}
.requirement-content-title {
  background-color: white;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  font-weight: bold;
}
.requirement-content {
  display: flex;
  flex-direction: column;
}

.requirement-text {
  width: 650rpx;
  margin: 20rpx 0;
  white-space: pre-wrap;
}
.requirement-image {
  width: 650rpx;
  margin-bottom: 20rpx;
}

.requirement-video {
  height: 500rpx;
  width: 650rpx;
  margin-bottom: 20rpx;
}

.requirement-video video {
  width: 100%;
  height: 500rpx;
}
