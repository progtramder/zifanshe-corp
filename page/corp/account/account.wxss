.balance-section {
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 100%;
  overflow: hidden;
  line-height: 80rpx;
  position: absolute;
}

.balance-section image {
  margin-top: 50rpx;
  height: 150rpx;
  width: 150rpx;
}
.balance-section text {
  text-align: center;
}
.balance {
  text-align: center;
  color: red;
  font-size: 42rpx;
  font-weight: bold;
}
.button {
  margin-top: 100rpx;
  width: 80%;
  height: 80rpx;
  background-color: #fde05c;
  line-height: 80rpx;
  text-align: center;
  border-radius: 10rpx;
}
.account-detail {
  padding-right: 50rpx;
  text-align: right;
  background-color: white;
  font-size: 80rpx;
}