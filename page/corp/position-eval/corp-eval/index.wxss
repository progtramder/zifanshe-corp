@import "../../../common/index.wxss";
.bar-item {
  color: white;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.corps-item-wrap {
  background-color: white;
  border-bottom-color: #f0f0f0;
  border-bottom-width: .1rpx;
  border-bottom-style: solid;
  position: relative;
}
.forward {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  right: 20rpx;
  top: 5rpx;
  font-weight: bold;
  font-size: 50rpx;
}

.modal {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 101;
  background-color: black;
  opacity: 0.3;
}

.popup {
  background-color: white;
  position: fixed;
  width: 100%;
  bottom: -500rpx;
  left: 0;
  z-index: 101;
}
.popup-show {
  transform: translateY(-500rpx);
  transition: .3s;
}

.popup button {
  background-color: white;
}

.seperator {
  height: 0rpx;
  border-style: solid;
  border-color: gray;
  border-width: 1rpx;
}
.report {
  position: fixed;
  width: 120rpx;
  height: 120rpx;
  background-color: purple;
  color: white;
  line-height: 120rpx;
  bottom: 220rpx;
  right: 20rpx;
  font-size: 22rpx;
  border-radius: 50%;
  text-align: center;
  border-color: gray;
  border-style: solid;
  border-width: 4rpx;
  opacity: 0.6
}