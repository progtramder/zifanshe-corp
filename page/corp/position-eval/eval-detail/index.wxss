.weui-form-preview {
    position: relative;
    background-color: #FFFFFF;
  }
  .weui-form-preview:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1rpx solid #D9D9D9;
    color: #D9D9D9;
  }


  .weui-form-preview__bd {
    padding: 10px 15px;
    text-align: right;
    line-height: 2;
  }

  .weui-form-preview__item {
    overflow: hidden;
  }
  .weui-form-preview__label {
    float: left;
    margin-right: 1em;
    text-align: justify;
    text-align-last: justify;
  }
  .weui-form-preview__value {
    display: block;
    overflow: hidden;
    word-break: normal;
    word-wrap: break-word;
    color: purple;
  }

  .preview-head {
    font-weight: bold;
  }