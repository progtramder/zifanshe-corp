<view class="container">
  <view class="page-body">
    <view wx:for="{{product}}" wx:key="item" class="exhibit-item-wrapper">
      <exhibit-item
        imgpath="{{item.cover}}"
        title="{{item.name}}"
        body="{{item.brief}}"
        footer=""
      />
      <image src="/image/qrcode.png" class="qrcode" bindtap="showQrCode" data-product="{{item._id}}" />
    </view>
  </view>
</view>