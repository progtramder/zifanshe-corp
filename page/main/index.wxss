@import "../common/index.wxss";

.page-container {
  padding-bottom: 10rpx;
  overflow-x: hidden;
}
swiper {
  height: 400rpx;
}
.swiper-item{
  width: 100%;
  height: 100%;
}

.scroll-view_H{
  white-space: nowrap;
  padding: 40rpx 15rpx 40rpx;
  background-color: white;
}

.category-block {
  display: inline-block;
  text-align: center;
  width: 180rpx;
}

.category-item {
  display: flex;
  font-size: 28rpx;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.category-image {
  width: 90rpx;
  height: 90rpx;
}

.consultants-view {
  margin-top: 20rpx;
  background-color: white;
}

.consultants-view-title {
  padding: 20rpx;
  border-bottom-color: #f0f0f0;
  border-bottom-width: .1rpx;
  border-bottom-style: solid;
  display: flex;
  flex-direction: row;
}

.consultants-view-title-L {
  flex: auto;
}
.consultants-view-title-R {
  font-size: 0.7rem;
  font-weight: bold;
  margin-right: 30rpx;
  padding:5rpx;
}

.consultants-view-title-R::after {
  content: ">";
  color: gray;
  position: absolute;
  transform: translateX(10rpx);
}

.consultants-view-item {
  padding-bottom: 20rpx;
  padding-top: 20rpx;
  height: 200rpx;
  border-bottom-color: #f0f0f0;
  border-bottom-width: .1rpx;
  border-bottom-style: solid;
  margin-left: 30rpx;
  margin-right: 30rpx;
  display: flex;
  flex-direction: row;
}
.consultants-view-item:last-child {
  border-style: none;
}
.consultants-view-item image {
  display: inline-block;
  height: 180rpx;
  width: 180rpx;
  flex: none;
  border-radius: 50%;
}
.consultants-view-item > view {
  display: inline-block;
  margin-left: 20rpx;
}

.consultant-name {
  font-weight: bold;
}

.consultant-price {
  color: red;
}

.consultant-intro {
  margin-right: 10rpx;
  font-size: 0.6rem;
  color: gray;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.consultant-join {
  margin: 50rpx;
  background-image: linear-gradient(to bottom, #fedf58 , #f9c607);
  text-align: center;
  color: white;
  padding: 20rpx;
  border-top-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
}

